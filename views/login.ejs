<%- include("index") -%>
<main class="page_wrapper">
	<div class="container">
		<div class="form_wrapper">
			<div class="form_title">
				<p>LOGO AICI</p>
				<p>TITLE OF THE PAGE</p>
				<p>Login Page</p>
			</div>
			<% if (message && message.text.length > 0) { %>
			<div class="error_wrapper">
				<p><%- message.text -%></p>
			</div>
			<% } %>
			<div class="form_content">
				<form
					method="post"
					id="login_form"
					action="/login"
					class="form_holder"
					autocomplete="off"
				>
					<div class="form_input_wrapper">
						<label for="form_email">Email:</label>
						<input
							required
							type="text"
							name="email"
							id="form_email"
							placeholder="Enter your email address or username..."
						/>
					</div>
					<div class="form_input_wrapper">
						<label for="form_password">Password:</label>
						<input
							required
							type="password"
							name="password"
							id="form_password"
							placeholder="Enter your password.."
						/>
					</div>
					<div class="form_input_wrapper">
						<a href="/resetpass">Forgot your password?</a>
						<a href="/register">Click here to create a new account!</a>
					</div>
					<div class="form_input_wrapper">
						<input
							type="submit"
							value="Login"
							id="form_submit"
						/>
					</div>
				</form>
			</div>
		</div>
	</div>
</main>
